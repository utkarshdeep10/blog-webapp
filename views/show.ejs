<% include ./partials/header.ejs %>

<div class="ui main text container segment">
<div class="ui huge header"><%= blog.title %></div>
<div class="ui top attached segment">
    <div class="item">
        <img src="<%= blog.image %>" class="ui centered image">
    <p> <%- blog.body %></p>
    <h6>Created on: <%= blog.created.toDateString()%>, <%= blog.created.toLocaleTimeString()%></h6>
    </div>
    <a href="/blogs/<%= blog._id %>/edit" class="ui teal button"> Edit </a>
    <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" id="del">
        <button class="ui red button">Delete</button>
    </form>
</div>



