<% include ./partials/header.ejs %>

<div class="ui main text container segment">
<div class="ui huge header">Edit:</div>
<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
    <div class="ui container">
        <div class="field">
            <label>Title:</label>
            <input type="text" value="<%= blog.title %>" name="title">
        </div>
        <div class="field">
            <label>Image URL:</label>
            <input type="text" value="<%= blog.image %>" name="image">
        </div>
        <div class="field">
            <label>About:</label>
            <textarea name="blog" id="t1"> <%= blog.body %> </textarea>
        </div>
    </div>
    <button class="ui teal big button">Submit</button>
</form>

<% include ./partials/footer.ejs %>